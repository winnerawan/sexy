<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="BrowserActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#f1f1f1</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="SplashActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#f1f1f1</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ReadabilityActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
